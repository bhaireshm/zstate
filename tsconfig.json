{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true
  },
  "include": ["src/publish.ts", "README.md"],
  "exclude": ["node_modules", "dist", "src/tests/*", "TODO.md"]
}
